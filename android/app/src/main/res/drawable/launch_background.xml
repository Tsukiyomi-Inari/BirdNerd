    <item>
        <color android:color="@color/splash" />
    </item>

    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash_icon" />
    </item>
    <item name="android:windowSplashScreenBehavior">icon_preferred</item>

</layer-list>
